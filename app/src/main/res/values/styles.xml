<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@color/action_bar</item>
        <item name="android:actionBarTabBarStyle">@color/action_bar</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">Arial</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--<style name="FragmentTheme" parent="AppTheme">-->
        <!--<item name="android:windowBackground">@drawable/background_main</item>-->
    <!--</style>-->


    <color name="accent">#fff</color>
</resources>
